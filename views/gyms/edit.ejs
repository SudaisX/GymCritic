<% layout('layouts/boiletplate')%>

<div class="row">
    <h1 class="text-center">Edit Gym</h1>
    <div class="col-6 offset-3">
        <form action="/gyms/<%= gym.id %>?_method=PUT" method="POST" novalidate class="needs-validation"
            enctype="multipart/form-data">
            <div class="mb-3">
                <label class='form-label' for="title">Title</label>
                <input type="text" id="title" name="title" class="form-control" value="<%= gym.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class='form-label' for="location">Location</label>
                <input type="text" id="location" name="location" class="form-control" value="<%= gym.location %>"
                    required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class='form-label' for="fee">Fee</label>
                <div class="input-group">
                    <span class="input-group-text">Rs</span>
                    <input type="text" id="fee" name="fee" class="form-control" value="<%= gym.fee %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Select image(s) to add</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
            </div>
            <div class="mb-3">
                <label class='form-label' for="description">Description</label>
                <textarea type="text" id="description" name="description" class="form-control" required
                    rows="5"><%= gym.description %></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <% gym.images.forEach((img, i) => { %>
                <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                </div>
                <label for="image-<%= i %>">Delete?</label>
                <% }) %>
            </div>

            <div class="mb-3">
                <button class="btn btn-success">Update Gym</button>
                <a class="btn btn-danger" href="/gyms/<%= gym._id %> ">Cancel Editing</a>
            </div>
        </form>
    </div>
</div>